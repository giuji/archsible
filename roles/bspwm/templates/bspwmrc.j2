#! /bin/bash

killall -q sxhkd
killall -q picom
killall -q polybar
killall -q dunst
killall -q playerctld
setxkbmap it

bspc monitor HDMI-A-0 -d 1 2 3 4 5 6 7 8 9

bspc config border_width         5
bspc config window_gap          14

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a LibreWolf desktop="^1" focus=on
bspc rule -a Gimp desktop="^8" focus=on
bspc rule -a inkscape desktop="^8" focus=on
bspc rule -a discord desktop="^4" state=pseudo_tiled
bscp rule -a Spotify desktop="^3" state=pseudo_tiled focus=on
bspc rule -a Steam deskotp="^5" focus=on


wal -i /home/{{ username }}/Immagini/wall/
. "/home/{{ username }}/.cache/wal/colors.sh"
bspc config normal_border_color "$color1"
bspc config active_border_color "$color2"
bspc config focused_border_color "$color15"

polybar &
picom &
sxhkd &
flameshot &
playerctld daemon &
bash /home/{{ username }}/.config/dunst/launchdunst.sh &