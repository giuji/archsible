bspc rule -a discord desktop="^4" state=pseudo_tiled
bscp rule -a Spotify desktop="^3" state=pseudo_tiled focus=on
bspc rule -a Steam deskotp="^5" focus=on
bspc rule -a Peazip staet=floating

